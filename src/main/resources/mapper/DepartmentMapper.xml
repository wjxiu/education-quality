<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.wjxiu.mapper.DepartmentMapper">

    <resultMap id="BaseResultMap" type="com.github.wjxiu.DO.DepartmentDO">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="createName" column="create_name" jdbcType="TIMESTAMP"/>
            <result property="delFlag" column="del_flag" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,update_time,
        create_name,del_flag
    </sql>
    <select id="pagelist" resultType="com.github.wjxiu.DO.DepartmentDO">
        select *
        from department
        <where>
            <if test="id !=null">
               and id = #{id}
            </if>
        <if test="name !=null and name!=''">
            and name like concat('%', #{name} ,'%')
        </if>
            and del_flag=0
        </where>
    </select>
</mapper>
